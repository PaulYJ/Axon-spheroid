}

ran_2b=0
proc ext_fig_2a_left() {
if (ran_2b) {
ic.amp=0.02
ic.dur=1
ic.del=100
objref ic_amp_vec
}
Can {L=1e-3
diam=1e-3}
tstop=150
init()
run()
if (ran_2b) {
Graph[0].xaxis(0,150)
Graph[0].xaxis(0)
Graph[0].exec_menu("View = plot")
}
}
proc ext_fig_2a_middle() {
Can {L=29
diam=29}
tstop=150
ic.dur=1
init()
run()
if (ran_2b) {
Graph[0].xaxis(0,150)
