}
proc ext_fig_2b() {
Can {L=53
diam=53}
xopen("make_pulse.hoc")
ic.dur=1e7
{ic_amp_vec.play(&ic.amp, dt) }
tstop=1300
init()
run()
{
Graph[0].exec_menu("View = plot")
Graph[0].xaxis(3)        
Graph[0].xaxis(100, 1300)
Graph[0].yaxis(-80, 50)
}
ran_2b=-1 // -1 is true meaning will need to readjust axis for earlier figs
}
